
<%- include('partials/header') -%>
<div class="row mb-2">
  <div class="col-md-6">
    <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <img src="images/adomas-unsplash.jpg" alt="">
      </div>

    </div>
  </div>
  <div class="col-md-6">
    <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
      <img src="images/liana-unsplash.jpg" alt="">
    </div>
  </div>
</div>
</div>
<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <h3 class="pb-4 mb-4 font-italic border-bottom">
        From the Experts
      </h3>

      <div class="blog-post">
        <h2 class="blog-post-title"><h1 style="color:#1abc9c">The Journal</h1>
        <p><%= text %></p>

        <% posts.forEach(function(post){%>

          <h2 class="blog-post-title"><%= post.title %></h2>

          <p class="blog-post-meta">
          <%=post.body.substring(0, 100) + ' ...'%>
           <a class="btn btn-outline-primary" href="/posts/<%= post._id %>"> Read More </a>
          </p>
        <%});%>

        <nav class="blog-pagination compose">
          <h2 style="color: #1abc9c">Create A New Post</h2>
          <a class="btn btn-outline-secondary" href="/compose">Compose A New Post</a>
        </nav>

      </div><!-- /.blog-post -->

    </div><!-- /.blog-main -->



    <aside class="col-md-4 blog-sidebar">
      <div class="p-4 mb-3 bg-light rounded">
        <h4 class="font-italic">About</h4>
        <p class="mb-0">this is a blog website made with <em>node.js, express.js and mongodb databse</em>. You can create a new post by adding '/compose' to the url, to visit the
          compose page.</p>
      </div>

      <div class="p-4">
        <h4 class="font-italic">Our History</h4>
        <ol class="list-unstyled mb-0">
          <li><a href="#">March 2021</a></li>
          <li><a href="#">February 2021</a></li>
          <li><a href="#">January 2021</a></li>
          <li><a href="#">December 2020</a></li>
          <li><a href="#">November 2020</a></li>
          <li><a href="#">October 2020</a></li>
          <li><a href="#">September 2020</a></li>
          <li><a href="#">August 2020</a></li>
          <li><a href="#">July 2020</a></li>
          <li><a href="#">June 2020</a></li>
          <li><a href="#">May 2021</a></li>
          <li><a href="#">April 2021</a></li>
        </ol>
      </div>

      <div class="p-4">
        <h4 class="font-italic">Support</h4>
        <ol class="list-unstyled">
          <li><a href="https://github.com/kojoakyer">GitHub</a></li>
          <li><a href="https://twitter.com/j_queeee">Twitter</a></li>
        </ol>
      </div>
    </aside><!-- /.blog-sidebar -->
   <div class="">
     <form class="form-signin" action="/" method="post">
       <h2>Search the weather conditions in your city</h2>
       <label for="city input">CITY NAME : </label>
       <input class="form-control top" id="city input" type="text" name="cityName" value="">
       <button class="btn btn-lg btn-primary mybtn" type="submit" name="submit">Search</button>
     </form>
   </div>


  </div><!-- /.row -->

</main><!-- /.container -->


<%- include('partials/footer') -%>
